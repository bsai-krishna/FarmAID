<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#092956"
    >

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="245dp"
            android:layout_height="111dp"
            android:scaleType="fitXY"
            android:src="@drawable/agritect"
            android:layout_marginLeft="58dp"
            android:layout_marginTop="32dp"
            />
        <Spinner
            android:layout_width="286dp"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="162dp"
            android:background="@drawable/spinner_back"
            android:id="@+id/spinner_crop"

            />
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="230dp"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:columnOrderPreserved="false"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:rowCount="3">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                android:onClick="next_step"
                android:id="@+id/yield_pred">

                <LinearLayout
                    android:id="@+id/personal_data"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#3A5378"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Crop Prediction"
                        android:textColor="#ffffff"
                        android:textSize="23sp" />

                    <ImageView
                        android:layout_marginTop="7dp"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/crop" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                android:onClick="next_step"
                android:id="@+id/yield_cal">

                <LinearLayout
                    android:id="@+id/start_chapter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#3A5378"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="6dp"
                    >

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="140dp"
                        android:background="@drawable/crop"


                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Yield Calculator"

                        android:textColor="#ffffff"
                        android:textSize="18sp" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                android:id="@+id/yield_com"
                android:onClick="next_step">

                <LinearLayout
                    android:id="@+id/view_notes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#3A5378"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="6dp">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="140dp"
                        android:background="@drawable/crop"


                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Yield Comparsion"

                        android:textColor="#ffffff"
                        android:textSize="18sp" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                android:onClick="next_step"
                android:id="@+id/crop_guide_card">


                <LinearLayout
                    android:id="@+id/crop_guide"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#3A5378"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="6dp">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="140dp"
                        android:background="@drawable/crop"


                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Crop Guide"

                        android:textColor="#ffffff"
                        android:textSize="18sp" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </GridLayout>


    </RelativeLayout>


</FrameLayout>

